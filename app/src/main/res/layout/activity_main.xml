<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnNotify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="단순 알림 (업데이트)"
        android:textColor="@color/color_noti_simple"
        app:layout_constraintBottom_toTopOf="@id/btnNotify2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <Button
        android:id="@+id/btnNotify2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="확장 (인박스 스타일)"
        android:textColor="@color/color_noti_inbox_style"
        app:layout_constraintBottom_toTopOf="@id/btnNotify4"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/btnNotify3"
        app:layout_constraintTop_toBottomOf="@id/btnNotify"
        app:layout_constraintVertical_chainStyle="packed" />

    <Button
        android:id="@+id/btnNotify3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="그룹"
        android:textColor="@color/color_noti_group"
        app:layout_constraintBottom_toBottomOf="@id/btnNotify2"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toRightOf="@id/btnNotify2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/btnNotify2" />

    <Button
        android:id="@+id/btnNotify4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="프로그레스"
        android:textColor="@color/color_noti_progress"
        app:layout_constraintBottom_toTopOf="@id/btnNotify6"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/btnNotify5"
        app:layout_constraintTop_toBottomOf="@id/btnNotify2"
        app:layout_constraintVertical_chainStyle="packed" />

    <Button
        android:id="@+id/btnNotify5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="프로그레스(무한)"
        android:textColor="@color/color_noti_progress_infinite"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toRightOf="@id/btnNotify4"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/btnNotify4" />

    <Button
        android:id="@+id/btnNotify6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="빅픽쳐 스타일"
        android:textColor="@color/color_noti_big_picture_style"
        app:layout_constraintBottom_toTopOf="@id/btnNotify8"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/btnNotify7"
        app:layout_constraintTop_toBottomOf="@id/btnNotify4"
        app:layout_constraintVertical_chainStyle="packed" />

    <Button
        android:id="@+id/btnNotify7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="빅텍스트 스타일"
        android:textColor="@color/color_noti_big_text_style"
        app:layout_constraintBottom_toBottomOf="@id/btnNotify6"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toRightOf="@id/btnNotify6"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/btnNotify6"
        app:layout_constraintVertical_chainStyle="packed" />

    <Button
        android:id="@+id/btnNotify8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="메시징 스타일"
        android:textColor="@color/color_noti_big_msg_style"
        app:layout_constraintBottom_toTopOf="@id/btnNotify9"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnNotify6"
        app:layout_constraintVertical_chainStyle="packed" />

    <Button
        android:id="@+id/btnNotify9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="커스텀뷰"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnNotify8"
        app:layout_constraintVertical_chainStyle="packed" />

    <Button
        android:id="@+id/btnSetting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="설정"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>